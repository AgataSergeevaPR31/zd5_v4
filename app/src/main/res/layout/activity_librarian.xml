<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container">



    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/button_books"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/zxc"
            android:contentDescription="Книги" />

        <ImageButton
            android:id="@+id/button_readers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/zxc"
            android:contentDescription="Читатели" />

        <ImageButton
            android:id="@+id/button_teachers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/zxc"
            android:contentDescription="Преподаватели" />

        <ImageButton
            android:id="@+id/button_students"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/zxc"
            android:contentDescription="Студенты" />

        <ImageButton
            android:id="@+id/button_reservations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/zxc"
            android:contentDescription="Бронь" />

        <ImageButton
            android:id="@+id/button_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:src="@drawable/zxc"
            android:contentDescription="Выход" />
    </LinearLayout>

</RelativeLayout>

